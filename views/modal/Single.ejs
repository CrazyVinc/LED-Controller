<div id="<%- ID %>" class="card" style="display: none;">
    <header class="card-header">
        <p class="card-header-title">
            <%- Name %>
        </p>
        <button class="card-header-icon" aria-label="more options">
            <span class="icon">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
        </button>
    </header>
    <div class="card-content">
        <div class="content">
            <div class="field is-horizontal">
                <label class="label" for="<%- ID %>Value">Off</label>
                <input id="<%- ID %>Value" name="<%- Name %>Value" type="checkbox" class="switch">
                <label class="label" for="<%- ID %>Value">On</label>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <header class="card-header">
    <p class="card-header-title">
        <%- Name %>
    </p>
    <button class="card-header-icon" aria-label="more options">
        <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
    </button>
    </header>
    <div class="card-content">
        <div style="margin-bottom: -0.5rem;" class="buttons has-addons">
            <button style="font-size: xx-large;" onclick="LedAction('<%- Name %>', 'power off');" class="button"><i class="fas fa-lightbulb-slash"></i></button>
            <button style="font-size: xx-large;" onclick="LedAction('<%- Name %>', 'power on')" class="button"><i class="fas fa-lightbulb-on"></i></button>
        </div>
    </div>
    <footer class="card-footer">
        <a class="card-footer-item"></a>
        <a class="card-footer-item"></a>
        <a class="card-footer-item"></a>
    </footer>
</div>
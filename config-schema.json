{
    "SerialPort": {
        "doc": "The port of the Serialbind.",
        "format": "*",
        "default": "null",
        "env": "SERIAL",
        "arg": "serial"
    },
    "AutoUpdater": {
        "doc": "Enable the auto updater?",
        "format": "Boolean",
        "default": "true",
        "env": "AU",
        "arg": "au"
    },
    "port": {
        "doc": "The port to bind.",
        "format": "port",
        "default": 8080,
        "env": "PORT",
        "arg": "port"
    },
    "DB": {
        "Sequelize": {
            "doc": "Is Sequelize already initialized",
            "format": "Boolean",
            "default": false
        },
        "hostname": {
            "doc": "Database hostname/IP",
            "format": "String",
            "default": "localhost"
        },
        "user": {
            "doc": "Database Username",
            "format": "String",
            "default": "root"
        },
        "password": {
            "doc": "Database password",
            "format": "String",
            "default": ""
        },
        "database": {
            "doc": "Database name",
            "format": "String",
            "default": "ledcontroller"
        }
    },
    "LEDs": {
        "Single": {
            "doc": "Define the command used to control the LED",
            "format": "Array",
            "default": []
        },
        "RGB": {
            "doc": "Define the command used to control that RGB LED",
            "format": "Array",
            "default": []
        },
        "IRRGB": {
            "doc": "Define the command used to control the specific IR LED",
            "format": "Array",
            "default": []
        }
    },
    "Other": {
        "Auth": {
            "doc": "Enable the inlog system",
            "format": "Boolean",
            "default": true
        },
        "UpdateServer": {
            "doc": "Enable Update Server",
            "format": "Boolean",
            "default": false
        }
    },
    "components": {
        "version": {
            "doc": "The version of the Led Controller",
            "format": "String",
            "default": "0.0.1"
        },
        "AutoUpdater": {
            "version": {
                "doc": "The version of the AutoUpdater",
                "format": "String",
                "default": "0.0.1"
            },
            "Update": {
                "URL": {
                    "doc": "The url for downloading the update",
                    "format": "String",
                    "default": "https://codeload.github.com/VLGNL/LED-Controller/zip/refs/heads/master"
                },
                "METHOD": {
                    "doc": "The method used for the request (POST / GET)",
                    "format": "String",
                    "default": "GET"
                }
            },
            "RemoteVersion": {
                "URL": {
                    "doc": "The url where to get the version of the AutoUpdater",
                    "format": "String",
                    "default": "https://api.github.com/repos/vlgnl/LED-Controller/git/refs/heads/master"
                },
                "METHOD": {
                    "doc": "The method used for the request (POST / GET)",
                    "format": "String",
                    "default": "GET"
                }
            }
        }
    }
}